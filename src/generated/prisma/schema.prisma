generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model BlogPost {
  id               String   @id @default(uuid())
  title            String
  content          String
  blogCoverImage   String
  authorId         String
  authorName       String
  authorProfilePic String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}
